    <!-- Add/Edit Ticket Modal -->
    <div id="ticketModal">
        <div class="modal-content">
            <span class="close-btn" id="closeModalBtn">&times;</span>
            <h2 id="modalTitle">Add New Ticket</h2>
            <form id="ticketForm">
                <input type="hidden" id="ticketId">

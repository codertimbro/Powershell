var todoList = document.getElementById("todo-items-list");
todoItems.forEach(function(item) {
  var listItem = document.createElement("li");
  listItem.innerHTML = item; // Use innerHTML to insert HTML content
  listItem.onclick = function() {
    addEditableItem(item); // Pass 'item' instead of 'this.textContent'
    this.remove();
  };
  todoList.appendChild(listItem);
});


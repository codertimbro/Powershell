// Initialize to-do list items
var todoItems = ["Clear Zoom temp at C:\\\\Users\\Username\\AppData\\Roaming\\ZoomVDI\\data.", "Uninstall Cm_zoom.","Rebooted Machine via pokemyapps.", "Installed cm_zoom via pokemyapps.", "Had user uninstall all Zoom on personal machine.", "Rebooted their machine.", "Installed Zoom VDI 5.16.11.24500 on personal machine", "Had user log back into myDesk and click on your Hosted Desktop link", "Open Zoom", "Still not working", "Went to Zoom settings connections tab ZoomVDI is connecting.", "Attached logs to the ticket.", "Attached screen shot.", "Now it is working.", "Uninstalled ZoomVDi via pgutlile tool.","Remoted into their personal machine.","Uninstalled via add and remove programs all workspace and installed latest Workspace via command line using the command of /cleaninstall." ];
var todoList = document.querySelector("#to-do-list ul");
todoItems.forEach(function(item) {
    var listItem = document.createElement("li");
    listItem.textContent = item;
    listItem.onclick = function() {
        addEditableItem(this.textContent);
        this.remove();
    };
    todoList.appendChild(listItem);
});

// Initialize editable section items
var editableItems = ["Talk to the user.", "Remoted in."];
var editableList = document.querySelector("#editable-section ul");
editableItems.forEach(function(item) {
    var listItem = document.createElement("li");
    listItem.textContent = item;
    listItem.onclick = function() {
        this.remove();
    };
    editableList.appendChild(listItem);
});

// Function to add a new item to editable section
function addEditableItem(itemText) {
    var editableList = document.querySelector("#editable-section ul");
    var listItem = document.createElement("li");
    listItem.textContent = itemText;
    listItem.onclick = function() {
        this.remove();
    };
    editableList.appendChild(listItem);
}

// Function to add a new item to to-do list
function addNewItem() {
    var newItem = prompt("Enter new item:");
    if (newItem) {
        var listItem = document.createElement("li");
        listItem.textContent = newItem;
        listItem.onclick = function() {
            addEditableItem(this.textContent);
            this.remove();
        };
        todoList.appendChild(listItem);
    }
}

// Function to add a new item to editable section
function addNewItemToEditable() {
    var newItem = prompt("Enter new item:");
    if (newItem) {
        addEditableItem(newItem);
    }
}

// Function to update ServiceNow
function updateServiceNow() {
    var ticketNumber = document.getElementById("ticket-number").value;
    var userId = document.getElementById("user-id").value;
    var shortDescription = document.getElementById("short-description").value;
    var editableContent = document.querySelector("#editable-section ul").innerText;
    var workNotes = encodeURIComponent("Work Notes:\n" + editableContent);
    var resolution_list = encodeURIComponent("Request Filled");
    var restoration_notes= document.getElementById("restoration_notes").value;
    var serviceNowUrl = "https://your-service-now-url.com/update?ticket=" + ticketNumber + "&user=" + userId + "&short_description=" + encodeURIComponent(shortDescription) + "&work_notes=" + workNotes+ restoration_notes+resolution_list;
    window.open(serviceNowUrl, "_blank");
}

<div class="overlay"></div>
<div class="column-container" id="selectedColumn"></div>
<div class="textarea-container">
    <textarea id="itemList" readonly></textarea>
    <button class="btn btn-primary refresh-button" onclick="refreshPage()">Refresh</button>
</div>

<script>
    const columns = document.querySelectorAll('.col');
    const textareaContainer = document.querySelector('.textarea-container');
    const textarea = document.getElementById('itemList');
    const overlay = document.querySelector('.overlay');
    const columnContainer = document.getElementById('selectedColumn');
    let itemList = [];

    function selectColumn(event, columnName) {
        const column = event.currentTarget;
        const items = column.querySelectorAll('.item');
        itemList = []; // Clear previous items
        items.forEach(item => {
            const itemText = `${item.textContent.trim()} →`;
            itemList.push(itemText);
        });
        const formattedItems = itemList.join('\n');
        textarea.value = `Talk to the user.\nRemoted into\n${formattedItems}`;

        // Display selected column and textarea
        columnContainer.innerHTML = `<h4>${columnName}</h4><div>${formattedItems.replace(/\n/g, '<br>')}</div>`;
        textareaContainer.style.display = 'block';
        columnContainer.style.display = 'block';
        overlay.style.display = 'block';

        // Fade out other columns
        document.querySelector('.container').classList.add('fade-out');
    }

    function refreshPage() {
        location.reload();
    }

    overlay.addEventListener('click', () => {
        textareaContainer.style.display = 'none';
        columnContainer.style.display = 'none';
        overlay.style.display = 'none';

        // Remove fade-out effect
        document.querySelector('.container').classList.remove('fade-out');
    });
</script>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>

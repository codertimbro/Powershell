# Define the time string
$timeString = Read-Host "Time Ex. 1AM EST"

# Extract hour and time zone
if ($timeString -match '(\d+)(AM|PM)\s+(.*)') {
    $hour = [int]$Matches[1]
    $amPM = $Matches[2]
    $timeZone = $Matches[3]
}

# Convert 12-hour format to 24-hour format
if ($amPM -eq "PM" -and $hour -ne 12) {
    $hour += 12
} elseif ($amPM -eq "AM" -and $hour -eq 12) {
    $hour = 0
}

# Create a DateTime object
$time = Get-Date -Hour $hour -Minute 0 -Second 0

# Convert the time to UTC
$utcTime = $time.ToUniversalTime()

# Output the UTC time
Write-Output "UTC Time: $utcTime"
